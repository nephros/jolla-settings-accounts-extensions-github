<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE provider>
<provider version="1.0" id="github">
    <name>GitHub</name>
    <description>MS GitHub account provider</description>
    <!--
    <icon>image://theme/graphic-service-github</icon>
    -->
    <icon>image://theme/github-mark-white</icon>

    <tags>
        <tag>user-group:account-github</tag>
    </tags>

    <template>
        <group name="auth">
            <setting name="method">oauth2</setting>
            <setting name="mechanism">web_server</setting>
            <!--
            <setting name="mechanism">user_agent</setting>
            -->
            <group name="oauth2">
                <group name="web_server">
                    <setting name="Host">github.com</setting>
                    <setting name="AllowedSchemes" type="as">["https"]</setting>
                    <setting name="AuthPath">/login/oauth/authorize</setting>
                    <setting name="ResponseType">code</setting>
                    <setting name="TokenPath">/login/oauth/access_token</setting>
                    <setting name="Scope" type="as">["notifications"]</setting>
                    <setting name="RedirectUri">https://127.0.0.1</setting>
                    <setting name="Port">7234</setting>
                    <setting name="ExternalBrowser">true</setting>
                </group>
                <!--
                <group name="user_agent">
                    <setting name="Host">github.com</setting>
                    <setting name="AuthPath">/login/oauth/authorize</setting>
                    <setting name="Scope" type="as">["notifications",]</setting>
                </group>
                <group name="web_server">
                    <setting name="RequestEndpoint">https://github.com/login/oauth/request_token</setting>
                    <setting name="TokenEndpoint">https://github.com/login/oauth/access_token</setting>
                    <setting name="AuthorizationEndpoint">https://github.com/login/oauth/authorize</setting>
                    <setting name="Scope" type="as">["notifications"]</setting>
                    <setting name="ResponseType">code</setting>
                    <setting name="RedirectUri">https://127.0.0.1:7234</setting>
                    <setting name="ExternalBrowser">true</setting>
                </group>
                -->
            </group>
        </group>
    </template>
</provider>
